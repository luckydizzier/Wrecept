<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:InvoiceApp.MAUI.ViewModels"
             x:Class="InvoiceApp.MAUI.Views.Controls.StatusBar"
             x:DataType="vm:StatusBarViewModel">
    <Border Background="{StaticResource HeaderFooterBrush}" Padding="2">
        <Grid ColumnDefinitions="*,*,*,120">
            <Label Text="{Binding DateTime}" />
            <Label Grid.Column="1" Text="{Binding ActiveMenu}" Margin="8,0" />
            <Label Grid.Column="2" Text="{Binding Message}" Margin="8,0" />
        </Grid>
    </Border>
</ContentView>
